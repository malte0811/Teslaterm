{
  "extends": [
    "tslint-no-circular-imports",
    "tslint:recommended"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "max-classes-per-file": false,
    "interface-name": false,
    "arrow-parens": false,
    "variable-name": {
      "options": [
        "check-format",
        "allow-snake-case",
        "ban-keywords"
      ]
    },
    "quotemark": false,
    "no-empty": false
  },
  "linterOptions": {
    "exclude": [
      "js/types/**",
      "js/sid/sid_emulated.ts"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  },
  "member-ordering": [
    true,
    {
      "order": [
        "static-field",
        "public-static-method",
        "instance-field",
        "public-instance-method",
        "protected-instance-method",
        "private-instance-method",
        "private-static-method"
      ]
    }
  ]
}
